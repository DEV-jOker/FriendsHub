<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <%= image_tag user.gravatar_url, class:"img-thumbnail" %>
      </div>
      <div class="col-9">
        <div class="row">
          <div class="col-5">
            <h5>Name:</h5>
          </div>
          <div class="col">
            <h5 class="card-title"><%= user.name%></h5>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <h5 >Following:</h5>
          </div>
          <div class="col">
            <h5 class="card-title"><%= user.friends.count %></h5>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <h5>Followed:</h5>
          </div>
          <div class="col">
            <h5 class="card-title"><%= user.followed.count %></h5>
          </div>
        </div>
      </div>
      <% if current_user == user %>
        <%= link_to 'Edit Profile', edit_user_registration_path,class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
